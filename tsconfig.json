{
	"compilerOptions": {
	  "experimentalDecorators": true,
	  //"noImplicitAny": true,
	  "moduleResolution": "node",
	  "target": "ES6",
	  "jsx": "react",
	  "allowJs": true,
	  // don't emit files, allow Babel to transform them
	  "noEmit": true,
	  "isolatedModules": true,
	  "esModuleInterop": true
	},
	"include": ["src/**/*", "types/**/*"],
	//"exclude": ["node_modules", "typings"]
  }
  